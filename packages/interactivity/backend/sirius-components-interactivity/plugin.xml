<plugin
      name="%pluginName"
      id="sirius-components-semantic-zoom"
      version="1.0.0"
      provider-name="%providerName">

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.emf.ecore" export="true"/>
      <import plugin="sirius-components-view-diagram" export="true"/>
      <import plugin="sirius-components-interactivity" export="true"/>
      <import plugin="sirius-components-view" export="true"/>
   </requires>

   <runtime>
      <library name=".">
         <export name="*"/>
      </library>
   </runtime>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated semantic_zoom -->
      <package
            uri="http://www.eclipse.org/sirius-web/semantic_zoom"
            class="org.eclipse.sirius.components.semantic_zoom.SemanticZoomPackage"
            genModel="src/main/resources/model/semantic_zoom.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated interactivity -->
      <package
            uri="http://www.eclipse.org/sirius-web/interactivity"
            class="org.eclipse.sirius.components.interactivity.InteractivityPackage"
            genModel="src/main/resources/model/interactivity.genmodel"/>
   </extension>

</plugin>
